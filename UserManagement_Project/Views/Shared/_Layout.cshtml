@using UserManagement_Project.Helper
@using UserManagement_Project.Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js" defer></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <link href="~/Content/main.css" rel="stylesheet" />
</head>

<body>

    <header class="text-center">@Locale.Header</header>

    <div class="navbar navbar-inverse" style="margin-bottom: -1.25%">
        <div class="container-fluid" style="padding: 2px 0 2px 50px; font-size: 125%; color: white">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(@Locale.User_Management_System, "Index", "Users", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                @if (Language.Lang == 1)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink(@Locale.AllUsers, "Index", "Users")</li>
                        <li>@Html.ActionLink(@Locale.AddUser, "Create", "Users")</li>
                        <li>@Html.ActionLink("English", "SetLanguage", "Users", new { id = 0 }, null)</li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink(@Locale.AllUsers, "Index", "Users")</li>
                        <li>@Html.ActionLink(@Locale.AddUser, "Create", "Users")</li>
                        <li>@Html.ActionLink("French", "SetLanguage", "Users", new { id = 1 }, null)</li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container-fluid body-content" style="margin: 2em">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @Locale.My_ASP_NET_Application</p>
        </footer>
    </div>

    <script>
    @if (TempData.Keys.Contains("Message")){<text>
            $(window).load(function()
              {
                $(document).ready(function()
                {
                    swal({
                    title:"Saved!",
                    text: "@TempData["Message"]",
                    type: "error"
                         });
                });
            });</text>
     }
     @if (TempData.Keys.Contains("ErrorMessage")){<text>
            $(window).load(function()
              {
                $(document).ready(function()
                {
                    swal({
                    title:"System Error",
                    text: "@TempData["ErrorMessage"]",
                    type: "error"
                         });
                });
            });</text>
     }
    </script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>

